<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avpc.avpcmobile.fragments.MemberDetail">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/member_detail_picture"
                    android:layout_marginTop="50dp"
                    android:contentDescription="@string/user_picture_profile" />

                <TextView
                    android:id="@+id/member_detail_name"
                    android:layout_below="@id/member_detail_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textSize="40sp"
                    android:layout_centerHorizontal="true"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_below="@id/member_detail_name">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/member_detail_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/ic_action_phone"
                    android:drawableStart="@drawable/ic_action_phone"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/member_detail_phone"
                    android:layout_below="@+id/member_detail_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_action_phone_start"
                    android:drawableStart="@drawable/ic_action_phone_start"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/member_detail_mail"
                    android:layout_below="@id/member_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_action_mail"
                    android:drawableStart="@drawable/ic_action_mail"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/member_detail_address"
                    android:layout_below="@id/member_detail_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_action_home"
                    android:drawableStart="@drawable/ic_action_home"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:background="@null"/>

                <!--<TextView-->
                    <!--android:id="@+id/member_detail_city"-->
                    <!--android:layout_below="@id/member_detail_address"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="6dp"-->
                    <!--android:drawableLeft="@drawable/ic_action_home"-->
                    <!--android:drawableStart="@drawable/ic_action_home"-->
                    <!--android:layout_marginLeft="24dp"-->
                    <!--android:layout_marginStart="24dp"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:drawablePadding="5dp"-->
                    <!--android:background="@null"/>-->

                <TextView
                    android:id="@+id/member_detail_user_group"
                    android:layout_below="@id/member_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_action_globe"
                    android:drawableStart="@drawable/ic_action_globe"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:background="@null"/>

                <!--<TextView-->
                    <!--android:id="@+id/member_detail_registry_date"-->
                    <!--android:layout_below="@id/member_detail_user_group"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="6dp"-->
                    <!--android:drawableLeft="@drawable/ic_system_update_alt"-->
                    <!--android:drawableStart="@drawable/ic_system_update_alt"-->
                    <!--android:layout_marginLeft="24dp"-->
                    <!--android:layout_marginStart="24dp"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:drawablePadding="5dp"-->
                    <!--android:background="@null"/>-->

                <TextView
                    android:id="@+id/member_detail_last_access_date"
                    android:layout_below="@id/member_detail_user_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_action_reload"
                    android:drawableStart="@drawable/ic_action_reload"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/member_detail_availability"
                    android:layout_below="@id/member_detail_last_access_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@drawable/ic_action_plug"
                    android:drawableStart="@drawable/ic_action_plug"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:background="@null"
                    android:layout_marginBottom="24dp"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
</ScrollView>
