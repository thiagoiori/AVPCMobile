<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.avpc.avpcmobile.fragments.NewIncidentFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/new_incident_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_background">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/new_incident_layout_title"
                            android:layout_marginTop="16dp">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/new_incident_title"
                                android:layout_margin="16dp"
                                android:background="@null"
                                android:hint="@string/incident_title" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/new_incident_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:gravity="top|start"
                                android:hint="@string/incident_description"
                                android:inputType="textMultiLine"
                                android:scrollbarStyle="insideInset"
                                android:background="@null"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:background="@android:color/white"
                    android:layout_margin="5dp">
                    <ImageView
                        android:id="@+id/new_incident_image"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="16dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:background="@android:color/white"
                    android:layout_margin="5dp">
                    <com.google.android.gms.maps.MapView
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                    </com.google.android.gms.maps.MapView>
                    </android.support.v7.widget.CardView>


            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
