<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#979999" />
            <gradient android:angle="-90" android:startColor="#9b9c9c" android:endColor="#aeafaf"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#9ea6a5" />
            <solid android:color="#8f9392"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#999797" />
            <gradient android:angle="-90" android:startColor="#abacac" android:endColor="#878787" />
        </shape>
    </item>
</selector>