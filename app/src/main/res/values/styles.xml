<resources>

    <style name="ButtonDialog" parent="ParentMaterialTheme">
        <item name="colorButtonNormal">#a39bf5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialTheme" parent="ParentMaterialTheme">

    </style>

    <style name="SplashTheme" parent="MaterialTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Base application theme. -->
    <style name="ParentMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">#2b1f9f</item>
        <item name="colorControlHighlight">#E8EAF6</item>
    </style>

    <style name="MaterialTheme.NoActionBar"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActionBar" parent="ParentMaterialTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="MaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
